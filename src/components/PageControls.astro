---
import { ChevronDown, Search } from "@lucide/astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="w-full py-4 hidden items-center justify-between gap-4">
  <div class="w-full flex items-center justify-start">
    <h1 class="sr-only">Lanzamientos musicales de Daniel Ospid</h1>
    <h2 class="font-bold text-2xl font-sans text-center">{title}</h2>
  </div>
  <div class="w-full flex items-center justify-end">
    <button class="btn">Nova Música</button>
  </div>
</div>
<div
  class="w-full z-5 my-5 gap-3 flex flex-col sm:flex-row items-center justify-center md:justify-between"
>
  <div class="w-full flex items-center justify-start gap-2">
    <h1 class="hidden" hidden>Discografía de Daniel Ospid</h1>
    <h2 class="text-2xl font-semibold font-mono">{title}</h2>
  </div>
  <div class="w-full flex items-center justify-end gap-1">
    <div
      class="h-[38px] px-3.5 flex items-center relative rounded-md border border-neutral-200 bg-neutral-100"
    >
      <input
        type="text"
        placeholder="Buscar por título..."
        class="size-full font-normal text-sm font-mono focus:outline-none"
      />
      <!-- value={searchTerm}
                onChange={handleSearchChange} -->
      <Search size={20} />
    </div>
    <div
      class="w-[200px] h-[38px] px-3.5 cursor-pointer flex items-center relative rounded-md border border-neutral-200  bg-neutral-100 "
    >
      <!-- onClick={() => setType(!type)} -->
      <button
        type="button"
        class="w-full h-[38px] px-1 flex items-center justify-start cursor-pointer font-normal text-sm font-mono"
      >
      Todos
        <!-- {selectedType} -->
      </button>
      <ChevronDown size={20} />
      <!-- ref={dropdownRef} -->
      <div
        class={`w-full flex flex-col p-1 gap-1 absolute top-[calc(100%+4px)] rounded-md border border-neutral-200 dark:border-neutral-800 bg-neutral-100 dark:bg-neutral-900 -ml-3.5 duration-300 ease-out ${
          false ? "opacity-100 visible" : "opacity-0 invisible"
        }`}
      >
        <button
          type="button"
          class="w-full h-[38px] px-3.5 flex items-center justify-start cursor-pointer rounded-md hover:bg-neutral-200 dark:hover:bg-neutral-800 font-normal text-sm font-mono"
        >
          <!-- onClick={() => handleTypeChange("Todos")} -->
          Todos
        </button>
        <button
          type="button"
          class="w-full h-[38px] px-3.5 flex items-center justify-start cursor-pointer rounded-md hover:bg-neutral-200 dark:hover:bg-neutral-800 font-normal text-sm font-mono"
        >
          <!-- onClick={() => handleTypeChange("Sencillo")} -->
          Sencillos
        </button>
        <button
          type="button"
          class="w-full h-[38px] px-3.5 flex items-center justify-start cursor-pointer rounded-md hover:bg-neutral-200 dark:hover:bg-neutral-800 font-normal text-sm font-mono"
        >
          <!-- onClick={() => handleTypeChange("EP")} -->
          EP
        </button>
        <button
          type="button"
          class="w-full h-[38px] px-3.5 flex items-center justify-start cursor-pointer rounded-md hover:bg-neutral-200 dark:hover:bg-neutral-800 font-normal text-sm font-mono"
        >
          <!-- onClick={() => handleTypeChange("Álbum")} -->
          Álbumes
        </button>
      </div>
    </div>
  </div>
</div>
